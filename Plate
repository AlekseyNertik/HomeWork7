public class Plate {
    private int food;

    public Plate(int food)
    {
        this.food = food;
    }

    public void info()
    {
        System.out.println("Еды в миске = "+ food+"гр");
    }

    public int getFoodPlate () { return food; }

    public void decreaseFood(int n) { food-=n; } // котик съел часть еды

    public void increaseFood() { food=100; info(); } // досыпаю корм до полной миски

}
